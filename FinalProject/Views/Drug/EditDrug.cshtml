@model FinalProject.ViewModels.EditDrugViewModel

@{
    ViewData["Title"] = "EditDrug";
    SelectList CompanyList = new SelectList(ViewBag.Company, "Id", "Name");
    Layout = "_AdminLayout";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a style="text-decoration:none" asp-action="AdminIndex" asp-controller="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a style="text-decoration:none" asp-action="AllDrug" asp-controller="Drug">Drugs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Drug Info</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDrug">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="CompanyList"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>

            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
