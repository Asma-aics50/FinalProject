@using FinalProject.Data.Enum
@model FinalProject.ViewModels.Appointment.CreateEditAppointmentViewModel

@{
    ViewData["Title"] = "Edit appointment";
    Layout = "_AdminLayout";

    SelectList DoctorsList = new SelectList(ViewBag.Doctors, "Id", "Name");
    SelectList PatientsList = new SelectList(ViewBag.Patients, "Id", "Name");

}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a style="text-decoration:none" asp-action="Index" asp-controller="Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a style="text-decoration:none" asp-action="AllPatientsAppointment" asp-controller="Appointment">Appointments</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit appointment</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DoctorId" class="form-label mt-4" ></label>
                <select asp-for="DoctorId" class="form-select" asp-items="DoctorsList"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId"  class="form-label mt-4"></label>
                <select asp-for="PatientId" class="form-select" asp-items="PatientsList"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="form-label mt-4"></label>
                <input asp-for="DateTime" class="form-select" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentStatues" class="form-label mt-4"></label>
                <select asp-for="AppointmentStatues" class="form-select" placeholder="Select status">
                    <option value="@AppointmentStatues.Pending">
                        @AppointmentStatues.Pending
                    </option>
                    <option value="@AppointmentStatues.confirmed">@AppointmentStatues.confirmed</option>
                    <option value="@AppointmentStatues.Done">@AppointmentStatues.Done</option>
                    <option value="@AppointmentStatues.Cancelled">@AppointmentStatues.Cancelled</option>

                </select>
                <span asp-validation-for="AppointmentStatues" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}