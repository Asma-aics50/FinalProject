@model IEnumerable<FinalProject.ViewModels.AllPatientViewModel>

@{
    ViewData["Title"] = "FindPatientByDoctor";
    Layout = "_DoctorLayout";
}


<a class="btn btn-success btn-lg" role="button" asp-action="CreatePatientAccount" asp-controller="Account">
    <i class="bi bi-person-add"></i>
    Add new Patient

</a>

<div class="card border-primary mb-3" style="width:100%; max-height: 20rem; border:none">

    <div class="card-body">
        <h2 class="card-title">All Patients</h2>

    </div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="#">Patients List</a></li>

    </ol>
</div>


<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="row">Id</th>
            <td>Name</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Actions</td>

        </tr>
    </thead>

    <tbody>
        @foreach (var patient in Model)
        {
            <tr>

                <td scope="row">
                    @Html.DisplayFor(modelItem => patient.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => patient.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => patient.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patient.Email)
                </td>
                <td>

                    <a asp-action="PatientDetails" asp-controller="Admin" asp-route-id="@patient.Id">
                        <i class="bi bi-eye"></i>
                    </a>
                </td>

            </tr>

        }

    </tbody>
</table>

