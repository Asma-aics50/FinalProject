@{
    ViewData["Title"] = "Home Page";
}


<div>

    <div>

        <img src="~/images/1x1.png" style="width:2110px; height:700px" />
    </div>

    <div style="width:2110px;height:400px; display:flex; justify-content:center;align-items:center">


        <a class="btn btn-success btn-lg " role="button" asp-action="Doctors" asp-controller="Doctor">
            <i class="bi bi-person-add"></i>
            Add new Appointment
        </a>

    </div>


    <div class="scroll-container" style="width: 2110px;display:flex; align-items:center;justify-content:center; overflow-x:auto; white-space:nowrap;">
    
        <div style="width:60%;display:flex; align-items:center; justify-content:center ;">
        
            <button class="prev" onclick="scrollLeft()">←</button>
        <div class="scroll-items" id="scrollItems" >
            @foreach (var item in ViewBag.Doctors)
            {

                    <div class="item" style="margin:0 10px; text-align:center; width:30%">

                        <img src="~/Uploads/@item.Image" alt="doctor image" class="mt-2" style="width:200px; height:250px; object-fit:cover; border-radius:50%;">
                        
                        <b> <div>Dr / @item.Name</div> </b>
                        <a class="btn btn-success btn-lg  " role="button" asp-action="BookAppointment" asp-controller="Appointment" asp-route-id="@item.Id">
                            <i class="bi bi-person-add"></i>
                            Book Appointment Now
                        </a>
                        
                    </div>
            }
        </div>
        <button class="next" onclick="scrollRight()">→</button>

        </div>
    </div>

</div>
<style>
    .scroll-container {
        display: flex;
        align-items: center;
        
    }

    .scroll-items::-webkit-scrollbar {
        display: none;
    }
    .scroll-items {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        width: 100%;
        gap: 10px;
        -ms-overflow-style: none; /* Internet Explorer 10+ */
        scrollbar-width: none; /* Firefox */
    }

    .item {
        flex: 0 0 auto;
        width: 350px;
        text-align: center;
        line-height: 60px;
    }

    button {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
    }
</style>

<script>
    function scrollLeft() {
        document.querySelector('.scroll-items').scrollBy({
            left: -400,
            behavior: 'smooth'
        });
    }

    function scrollRight() {
        document.querySelector('.scroll-items').scrollBy({
            left: 400,
            behavior: 'smooth'
        });
    }
</script>