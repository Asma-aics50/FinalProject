@model IEnumerable<FinalProject.ViewModels.DoctorsViewModel>

@{
    ViewData["Title"] = "Doctors";
}
<div style="width:100%; height: 100%;">




    <div style="display:flex;justify-content:flex-start;width:1300px;flex-wrap:wrap;justify-content:space-between;">


    @foreach (var item in Model)
    {
        <div class="col-md-4 mt-4" style="width:30%;" >
            <div class="card">

                <img src="~/Uploads/@item.Image" class="card-img-top" alt="doctor image" style ="height:380px">

                <div class="card-body">
                    <b> <p class="card-text">@item.Name</p></b>
                </div>
                <div class="card-body">
                    <p class="card-text">Departmnet : @item.Department"</p>
                </div>

                    <a asp-action="BookAppointment" asp-controller="Appointment" asp-route-id="@item.Id" class="btn btn-primary">Book Appointment</a>
            </div>
        </div>




    }
    </div>

</div>
</div>



                </div>