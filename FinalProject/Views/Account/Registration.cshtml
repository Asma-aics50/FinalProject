@model FinalProject.ViewModels.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="row" style="width:100%; height:800px;display:flex;justify-content:center; align-items:center;">
    <div class="col-md-6">
        <form asp-action="Registration">
        <fieldset>
            <legend> Sign Up</legend>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label mt-2"></label>
                <input asp-for="FirstName" class="form-control mt-2" />
                <span asp-validation-for="FirstName" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label mt-2"></label>
                <input asp-for="LastName" class="form-control mt-2" />
                <span asp-validation-for="LastName" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label mt-2"></label>
                <input asp-for="Email" class="form-control mt-2" />
                <span asp-validation-for="Email" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label mt-2"></label>
                <input asp-for="Password" class="form-control mt-2" />
                <span asp-validation-for="Password" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label mt-2"></label>
                <input asp-for="ConfirmPassword" class="form-control mt-2" />
                <span asp-validation-for="ConfirmPassword" class="text-danger mt-2"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Gender" class="control-label mt-2"></label>
                <select asp-for="Gender" class="form-control mt-2">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>                   
                </select>
                <span asp-validation-for="Gender" class="text-danger mt-2"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </fieldset>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
