    ViewData["Title"] = "CreateEmployeeAccount";

    SelectList DeprtmentsList = new SelectList(ViewBag.Departments, "Id", "Name");
}
 

<h1>CreateEmployeeAccount</h1>

<h4>CreateEmployeeAccountViewModel</h4>
